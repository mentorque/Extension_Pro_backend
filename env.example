# Backend Environment Variables
# Copy this to .env file

# Database Connection (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname?schema=public

# Gemini API Keys (Required)
# Primary Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Fallback Gemini API Keys (Optional)
GEMINI_API_KEY_FALLBACK_1=your_fallback_key_1_here
GEMINI_API_KEY_FALLBACK_2=your_fallback_key_2_here

# Google Custom Search Engine (Optional - for HR Lookup)
GOOGLE_CSE_ID=your_google_cse_id_here
GOOGLE_API_KEY=your_google_api_key_here

# Slack Webhook URL (Optional - for error notifications)
# Format: https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Server Port (Optional - defaults to 3000)
PORT=8000

# API Base URL (Optional - for internal reference)
API_BASE_URL=http://localhost:8000

